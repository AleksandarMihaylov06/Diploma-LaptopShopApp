@model LaptopShopApp.Models.Order.OrderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div>
    <h1 class="text-center mb-4">Order</h1>

    <div>
        @foreach (var item in Model.OrderProducts)
        {
            <div class="d-flex shopping-product border rounded">
                <div>
                    <img src="@item.Pic" alt="Image" width="100" height="100">
                </div>
                <div class="w-100">
                    <h5 class="text-center">@item.ProductName</h5>
                        <p class="text-center">@item.Price lv.</p>
                </div>
            </div>
        }
    </div>
    <div class="mt-3">
        <h4>Total price: @Model.TotalPrice lv.</h4>
    </div>

    <hr />

    <div>
       <div class="d-flex">
            <div class="d-flex w-25">
                <div class="mr-20">
                    <a asp-controller="Order" asp-action="Create" class="btn btn-warning">Order</a>
                </div>
                <div class="mr-20">
                    <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-primary">Back to cart</a>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center w-75">
                <label for="Address" class="mr-20">Address to deliver: </label>
                <div>
                    <input asp-for="Address" class="form-control" value="@Model.Address" style="width: 300px !important" required/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
       </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

