@model LaptopShopApp.Models.Order.OrderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <input asp-for="Address" class="form-control" value="@Model.Address" />
            <div class="form-group">
                @for (int i = 0; i < Model.OrderProducts.Count; i++)
                {
                    <div>
                        <label class="control-label">Product name</label>
                        <input asp-for="OrderProducts[@i].ProductName" class="form-control" readonly />
                    </div>
                    <div>
                        <img class="form-control" src="@Model.OrderProducts[i].Pic" />
                    </div>
                    <div>
                        <label class="control-label">Quantity</label>
                        <input asp-for="OrderProducts[@i].Quantity" class="form-control" readonly />
                    </div>
                    <div>
                        <label class="control-label">Price</label>
                        <input asp-for="OrderProducts[@i].Price" class="form-control" readonly />
                    </div>
                    <div>
                        <label class="control-label">Discount</label>
                        <input asp-for="OrderProducts[@i].Discount" class="form-control" readonly />
                    </div>

                    <input asp-for="OrderProducts[@i].ProductId" type="hidden" />
                }
            </div>
            <div>
                <label class="control-label">Total price</label>
                <input asp-for="TotalPrice" class="form-control" value="@Model.TotalPrice" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>