@model IEnumerable<LaptopShopApp.Models.Order.OrderIndexVM>

@{
    ViewData["Title"] = "Index";
}
<h3 class="text-center mb-4">All orders</h3>
@foreach (var item in Model)
{

    <details>
        @{
            if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
            {
                <summary>
                    @item.OrderId | @item.UserName | @item.DateTime | @item.Address | @item.TotalPrice |
                    <ul>
                    <li class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <p>@item.OrderStatus</p>
                        </button>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item">Procesing</a></li>
                                <li><a class="dropdown-item">Traveling</a></li>
                                <li><a class="dropdown-item">Done</a></li>
                                <li><a class="dropdown-item">Cancelled</a></li>
                        </ul>
                    </li>
                    </ul>
                
                @item.OrderStatus (editable)</summary>
            }
            else
            {
                <summary>@item.OrderId | @item.DateTime | @item.Address | @item.TotalPrice | @item.OrderStatus</summary>
            }
        }
        
        
        @foreach(var product in item.OrderProducts)
        {
            <p>@product.ProductName | @product.Pic | @product.Discription | @product.Quantity | @product.Price</p>
        }
    </details>
    }
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
