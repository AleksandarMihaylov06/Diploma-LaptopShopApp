@model IEnumerable<LaptopShopApp.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container" style="position: relative;">
        <div class="text-conteiner" style="display:flex;justify-content:center;position:absolute;margin:100px 0px 0px 80px;width: 600px;height: 500px; ">
            <h1 style="position:absolute;font-size:55px;width: 700px;text-align:center;" class="text-white">Welcome to LaptopShop</h1>
            <p style="position:absolute;margin:100px; text-align:center;width:600px;" class="text-white">
            Here you can find the best laptops and accessories for ur setup!
            Where next-gen laptops meet game-changing gear. From lightning-fast machines 
            to the sharpest accessories, we’ve got everything you need to dominate work, play and everything in between.
            </p>
            <p style="position:absolute;margin:200px 200px 0px 0px; width:400px; text-align:start;" class="text-white">
                <b>
                <span>🔥 Top Brands. Killer Deals. Always In Stock.</span> <br />
                <span>🎧 Mice that respond like instinct.</span><br />
                <span>⌨️ Keyboards that feel like magic.</span><br />
                <span>🖥️ Screens so crisp you’ll forget real life.</span><br />
                </b>
            </p>
            <p style="position:absolute;margin:420px; width:300px;" class="text-white">Click the button and get started</p>
            <a class="btn btn-light" style="position:absolute;margin:450px" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
        </div>
        <img src="~/IMG/Laptop.png" style=" position:absolute; margin:80px 0px 0px 650px" />
        <img src="~/IMG/0d6efd.png" class="blue-background w-100" height="600" style="margin:40px 0px 0px 0px;" />
    </div>
</div>

<h2 class="mt-5 text-center"> Top Sold Products</h2>

<div class="product-container">
    @foreach (var item in Model)
    {

        <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: inherit;" />
        <div class="product-card" style="width:380px;height:600px;">
            <img src="@Html.DisplayFor(modelItem => item.Picture)" style="width:350px;height:270px;" alt="Image">
            <hr />
            <div style="width:350px;height:250px;">
                <h3>@Html.DisplayFor(modelItem => item.ProductName)</h3>
                <p><strong>Category:</strong> @Html.DisplayFor(modelItem => item.CategoryName)</p>
                <p><strong>Discription:</strong>@Html.DisplayFor(modelItem => item.Discription)</p>
                <p><strong>Quantity:</strong> @Html.DisplayFor(modelItem => item.Quantity)</p>
                @if (item.HasDiscount)
                {
                    <strong>Price:</strong>
                    <span style="text-decoration: line-through; color: darkred;">@item.Price lv.</span>
                    <span style="font-weight: bold; font-size: 20px; color: green;">@item.PriceWithDiscount lv.</span>
                }
                else
                {
                    <strong>Price:</strong>
                    <span>@item.Price</span>
                }

                @if (item.HasDiscount)
                {
                    <p><strong>Discount: </strong>@Html.DisplayFor(modelItem => item.Discount)%</p>
                }
            </div>
        </div>
    }
</div>

